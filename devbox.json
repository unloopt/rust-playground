{
  "packages": [
    "rustup@latest",
    "libiconv@latest",
    "natscli@latest",
    "nats-top@latest",
    "nsc@latest"
  ],
  "env": {
    "PROJECT_DIR": "$PWD"
  },
  "shell": {
    "init_hook": [
      "source scripts/set-env.sh",
      "source scripts/install-tailwind.sh",
      "rustup default stable --component rust-analyzer",
      "cargo fetch"
    ],
    "scripts": {
      "build": "cargo build",
      "build-docs": "cargo doc",
      "run": "cargo run",
      "test": [
        "cargo test -- --show-output"
      ]
    }
  }
}