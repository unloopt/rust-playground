{
  "packages": [
    "rustup@latest",
    "libiconv@latest"
  ],
  "env": {
    "PROJECT_DIR": "$PWD"
  },
  "shell": {
    "init_hook": [
      ". config/set-env.sh",
      "rustup default stable"
    ],
    "scripts": {
      "build": "cargo build",
      "run": "cargo run",
      "test": [
          "cargo test -- --show-output"
      ],
      "build-docs": "cargo doc"
    }
  }
}