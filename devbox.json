{
  "packages": [
    "rustup@latest",
    "cargo-shuttle@latest",
    "natscli@latest",
    "nats-top@latest",
    "nsc@latest",
    "path:flakes/ory-cli",
    "nodejs@latest"
  ],
  "env": {
    "PROJECT_DIR": "$PWD"
  },
  "shell": {
    "init_hook": [
      "source scripts/set-env.sh",
      "rustup default stable",
      "cargo fetch"
    ],
    "scripts": {
      "build": "cargo build",
      "build-docs": "cargo doc",
      "run": "cargo run",
      "test": [
        "cargo test -- --show-output"
      ]
    }
  }
}
